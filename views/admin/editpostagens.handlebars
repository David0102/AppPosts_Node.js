{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem: </h4>
        <form action="/admin/postagens/edit" method="POST">
            <label for="titulo">Título: </label>
            <input type="hidden" name="id" value="{{postagem._id}}">
            <input type="text" name="titulo" class="form-control mt-1" value="{{postagem.titulo}}" required>
            <label for="slug" class="mt-2">Slug: </label>
            <input type="text" name="slug" class="form-control mt-1" value="{{postagem.slug}}" required>
            <label for="descricao" class="mt-2">Descrição: </label>
            <input type="text" name="descricao" class="form-control mt-1" value="{{postagem.descricao}}" required>
            <label for="conteudo" class="mt-2">Conteudo: </label>
            <textarea name="conteudo" class="form-control mt-1" required>{{postagem.conteudo}}</textarea>
            <label for="categoria" class="mt-2">Categoria: </label>
            <select name="categoria" class="form-select mt-1">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>