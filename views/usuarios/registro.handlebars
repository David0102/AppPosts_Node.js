{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card mt-4 position-absolute top-50 start-50 w-50 translate-middle shadow p-3 mb-5 bg-body rounded">
    <h2 class="display-7" style="text-align: center;">Cadastre-se</h2>
    <div class="card-body">
        <form action="/usuarios/registro" method="POST">
            <label for="nome" class="mt-2">Nome: </label>
            <input type="text" name="nome" class="form-control" required>
            <label for="email" class="mt-2">Email: </label>
            <input type="text" name="email" class="form-control" required>
            <label for="senha" class="mt-2">Senha: </label>
            <input type="password" name="senha" class="form-control" required>
            <label for="senha2" class="mt-2">Confirmar senha: </label>
            <input type="password" name="senha2" class="form-control" required>
            <div class="d-grid gap-2">
                <button class="btn btn-success mt-3" type="submit">Cadastrar</button>
            </div>
        </form>
    </div>
</div>