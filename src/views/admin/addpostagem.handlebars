{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h2>Nova postagem</h2>
<div class="card bg-light shadow p-2 mb-3 bg-body rounded bg-gradient mt-3">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control mt-1" required>
            <label for="slug" class="mt-3">Slug: </label>
            <input type="text" name="slug" class="form-control mt-1" required>
            <label for="descricao" class="mt-3">Descrição: </label>
            <input type="text" name="descricao" class="form-control mt-1" required>
            <label for="conteudo" class="mt-3">Conteudo: </label>
            <textarea name="conteudo" class="form-control mt-1" required></textarea>
            <label for="categoria" class="mt-3">Categoria: </label>
            <select name="categoria" class="form-select mt-1">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <div class="d-grid gap-2">
                <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
            </div>
        </form>
    </div>
</div>